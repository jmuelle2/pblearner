<div class="page-header">
  <h1>
    Assigned prompts
    <a href="/assigned_prompts/new" class="btn btn-lg btn-success">New Assigned prompt</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Prompt</th>
        <th>Student</th>
        <th>Actions</th>
      </tr>

      <% @assigned_prompts.each do |assigned_prompt| %>
      <tr>
        <td>
          <% if assigned_prompt.prompt.present? %>
            <a href="/prompts/<%= assigned_prompt.prompt.id %>">
              <%= assigned_prompt.prompt.content %>
            </a>
          <% end %>
        </td>
        <td>
          <% if assigned_prompt.student.present? %>
            <a href="/students/<%= assigned_prompt.student.id %>">
              <%= assigned_prompt.student.name %>
            </a>
          <% end %>
        </td>
        <td>
          <a href="/assigned_prompts/<%= assigned_prompt.id %>" class="btn btn-primary">Show</a>
          <a href="/assigned_prompts/<%= assigned_prompt.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_assigned_prompt/<%= assigned_prompt.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @assigned_prompts, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
