<div class="page-header">
  <h1>
    Comments
    <a href="/comments/new" class="btn btn-lg btn-success">New Comment</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Response</th>
        <th>Content</th>
        <th>Student</th>
        <th>Instructor</th>
        <th>Actions</th>
      </tr>

      <% @comments.each do |comment| %>
      <tr>
        <td>
          <% if comment.response.present? %>
            <a href="/responses/<%= comment.response.id %>">
              <%= comment.response.assigned_prompt_id %>
            </a>
          <% end %>
        </td>
        <td><%= comment.content %></td>
        <td><%= comment.student_id %></td>
        <td><%= comment.instructor_id %></td>
        <td>
          <a href="/comments/<%= comment.id %>" class="btn btn-primary">Show</a>
          <a href="/comments/<%= comment.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_comment/<%= comment.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @comments, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
