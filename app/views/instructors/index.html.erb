<div class="page-header">
  <h1>
    Instructors
    <a href="/instructors/new" class="btn btn-lg btn-success">New Instructor</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Email</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>

      <% @instructors.each do |instructor| %>
      <tr>
        <td><%= instructor.email %></td>
        <td><%= instructor.password %></td>
        <td>
          <a href="/instructors/<%= instructor.id %>" class="btn btn-primary">Show</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @instructors, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
