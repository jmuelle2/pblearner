<div class="page-header">
  <h3>Instructor #<%= @instructor.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Email</dt>
      <dd><%= @instructor.email %></dd>

      <dt>Password</dt>
      <dd><%= @instructor.password %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/instructors" class="btn btn-primary">
        Back
      </a>
    </div>
  </div>
</div>

<!-- A Instructor has many prompts -->

<div class="row">
  <div class="col-md-12">
    <ul class="list-group">
      <li class="list-group-item list-group-item-info">
        Prompts
      </li>

      <% @instructor.prompts.each do |prompt| %>
        <li class="list-group-item">
          <a href="/prompts/<%= prompt.id %>">
            <%= prompt.content %>
          </a>
          <div class="btn-group btn-group-xs pull-right">
            <a href="/prompts/<%= prompt.id %>" class="btn btn-primary">
              <i class="fa fa-search-plus"></i>
            </a>
            <%if current_user == prompt.admin %>
              <a href="/prompts/<%= prompt.id %>/edit" class="btn btn-warning">
                <i class="fa fa-edit"></i>
              </a>
              <a href="/delete_prompt/<%= prompt.id %>" class="btn btn-danger" rel="nofollow">
                <i class="fa fa-trash-o"></i>
              </a>
            <% end %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
</div>
