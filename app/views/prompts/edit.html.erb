<!-- Validation failure messages -->
<% if @prompt.errors.any? %>
  <% @prompt.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Prompt #<%= @prompt.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_prompt/<%= @prompt.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for content -->
      <div class="form-group">
        <label for="content" class="control-label">
          Content
        </label>

        <textarea id="content" name="content" placeholder="Content" class="form-control" rows="3"><%= @prompt.content %></textarea>
      </div>

      <!-- Label and input for instructor_id -->
      <div class="form-group">
        <label for="instructor_id" class="control-label">
          Instructor
        </label>

        <%= select_tag(:instructor_id, options_from_collection_for_select(Instructor.all, :id, :created_at, @prompt.instructor_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Prompt
      </button>
      or
      <a href="/prompts/<%= @prompt.id %>">Cancel</a>
    </form>
  </div>
</div>
